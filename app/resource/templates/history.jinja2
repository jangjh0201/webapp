{% extends "navbar.jinja2" %}

{% block head %}
<link rel="stylesheet" href="/static/css/common.css">
<link rel="stylesheet" href="/static/css/history.css">
{% endblock %}

{% block content %}
<h2>내역</h2>
<div class="table-container">
    <table class="history-table">
        <thead>
            <tr>
                <th>주문번호</th>
                <th>아이스크림</th>
                <th>토핑</th>
                <th>소모품</th>
                <th>시간</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.ice_cream.name }}</td>
                <td>
                    {% for topping in order.toppings %}
                        {{ topping.name }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>
                    {% for consumable in order.consumables %}
                        {{ consumable.name }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>{{ order.order_time }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}